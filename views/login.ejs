<%- include("templates/header") %>

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
  <div class="card shadow-sm" style="width: 360px; border-radius: 1rem;">
    

    <div class="card-header text-white text-center" style="background: linear-gradient(135deg, #1e3a8a, #3b82f6); border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
      <h4 class="mb-0">Welcome Back</h4>
    </div>
    

    <div class="card-body p-4">
      <form action="/loginSubmit" method="post">
        <div class="form-floating mb-3">
          <input 
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="name@example.com"
            required
          >
          <label for="email">Email address</label>
        </div>

        <div class="form-floating mb-4">
          <input 
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Password"
            required
          >
          <label for="password">Password</label>
        </div>
        <button
          type="submit"
          class="btn btn-primary w-100 mb-3"
          style="
            --bs-btn-bg: #e83e8c;
            --bs-btn-border-color: #e83e8c;
            --bs-btn-hover-bg: #d63384;
            --bs-btn-hover-border-color: #c32f76;
          "
        >
          Sign In
        </button>
        <div class="text-center">
          <a href="/signup" class="btn btn-outline-primary w-100">
            Create an Account
          </a>
        </div>
      </form>
    </div>
    
  </div>
</div>

<%- include("templates/footer") %>
